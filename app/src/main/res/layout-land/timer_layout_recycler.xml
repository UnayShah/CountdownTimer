<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TimerActivity">

    <LinearLayout
        android:id="@+id/timer_constraint"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/padding_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/timers_scrollView"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/landscape_timer_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/timer_layout_countdown"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_large"
            android:paddingTop="@dimen/padding_small"
            android:paddingRight="@dimen/padding_large"
            android:paddingBottom="@dimen/padding_small">

            <fragment
                android:id="@+id/timer_text_fragment"
                android:name="com.example.timerApplication.fragmentsInflater.timerTextFragmentInflater"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_vsmall"
                tools:layout="@layout/timer_text" />

            <fragment
                android:id="@+id/loop_fragment"
                android:name="com.example.timerApplication.fragmentsInflater.loopSwitchFragmentInflater"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_vsmall"
                tools:layout="@layout/loop_button" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_large">

            <ImageButton
                android:id="@+id/return_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/timer_layout_buttons"
                android:padding="@dimen/padding_small_medium"
                android:src="@drawable/ic_resource_return"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/start_pause_button"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/start_pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_small"
                android:background="@drawable/timer_layout_buttons"
                android:padding="@dimen/padding_small"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/ic_round_play_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/return_button"
                app:layout_constraintRight_toLeftOf="@id/stop_button"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/stop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/timer_layout_buttons"
                android:padding="@dimen/padding_small_medium"
                android:src="@drawable/ic_round_stop"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/start_pause_button"
                app:layout_constraintRight_toLeftOf="@id/add_button"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/timer_layout_buttons"
                android:padding="@dimen/padding_small_medium"
                android:src="@drawable/ic_round_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/stop_button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/timers_scrollView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/timer_constraint"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/timers_scrollView_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/timers_scrollView_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>


