<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/number_picker_background"
    tools:context=".popupactivity.PopupActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/number_picker_dialog"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/timer_picker_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_medium"
            android:gravity="center"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/number_picker_hours"
                style="@style/AppTheme.PopupNumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <NumberPicker
                android:id="@+id/number_picker_minutes"
                style="@style/AppTheme.PopupNumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <NumberPicker
                android:id="@+id/number_picker_seconds"
                style="@style/AppTheme.PopupNumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_vvsmall"
            android:layout_marginLeft="@dimen/padding_vvsmall"
            android:layout_marginRight="@dimen/padding_vvsmall"
            android:background="@color/timerLayoutButtons" />

        <LinearLayout
            android:id="@+id/timer_picker_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/set_timer_button"
                style="@style/AppTheme.PopupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set" />

            <View
                android:layout_width="@dimen/padding_vvsmall"
                android:layout_height="match_parent"
                android:background="@color/timerLayoutButtons"
                android:layout_marginBottom="@dimen/padding_vvsmall"/>

            <Button
                android:id="@+id/cancel_set_timer_button"
                style="@style/AppTheme.PopupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>