<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_vvsmall"
    android:layout_marginBottom="@dimen/padding_vvsmall"
    android:background="@drawable/timer_list"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small">

    <ImageView
        android:id="@+id/drag"
        android:layout_width="?listPreferredItemHeight"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|left"
        android:scaleType="center"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/ic_round_reorder_24" />

    <TextView
        android:id="@+id/timer_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:textAlignment="gravity"
        android:layout_weight="1"
        android:paddingTop="@dimen/padding_vsmall"
        android:paddingBottom="@dimen/padding_vsmall"
        android:paddingRight="@dimen/padding_small_medium"
        android:paddingLeft="0dp"
        android:text="00:00:00"
        android:textColor="@color/text"
        android:textSize="@dimen/timer_list_text" />

    <ImageButton
        android:id="@+id/edit_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="@dimen/padding_vsmall"
        android:layout_marginRight="@dimen/padding_vsmall"
        android:background="@drawable/timer_list_buttons"
        android:padding="@dimen/padding_small"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/edit" />

    <ImageButton
        android:id="@+id/delete_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_marginRight="@dimen/padding_vvsmall"
        android:background="@drawable/timer_list_buttons"
        android:padding="@dimen/padding_small"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/delete" />
</LinearLayout>