<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/number_picker_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/number_picker_dialog"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextTimerName"
            style="@style/timerNameEditText"
            android:textSize="@dimen/padding_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginBottom="@dimen/padding_large"
            android:autofillHints=""
            android:hint="@string/timer_text_placeholder"
            android:inputType="textPersonName"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_vvsmall"
            android:layout_marginLeft="@dimen/padding_vvsmall"
            android:layout_marginRight="@dimen/padding_vvsmall"
            android:background="@color/timerLayoutButtons" />

        <LinearLayout
            android:id="@+id/timer_name_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_vvsmall"
            android:layout_marginRight="@dimen/padding_vvsmall"
            android:layout_marginBottom="@dimen/padding_vvsmall"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/setTimerNameButton"
                style="@style/AppTheme.PopupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set" />

            <View
                android:layout_width="@dimen/padding_vvsmall"
                android:layout_height="match_parent"
                android:background="@color/timerLayoutButtons" />

            <Button
                android:id="@+id/cancelSetTimerNameButton"
                style="@style/AppTheme.PopupButton"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>