<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_vvsmall"
    android:layout_marginBottom="@dimen/padding_vvsmall"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:paddingStart="@dimen/padding_small"
    android:paddingTop="@dimen/padding_small"
    android:paddingEnd="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small">

    <TextView
        android:id="@+id/timer_group_picker_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_weight="1"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/padding_vsmall"
        android:paddingEnd="@dimen/padding_small_medium"
        android:paddingBottom="@dimen/padding_vsmall"
        android:textAlignment="gravity"
        android:textColor="@color/text"
        android:textSize="@dimen/timer_list_text" />
</LinearLayout>