<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnSurface">@color/iconTint</item>
        <item name="colorSurface">@color/iconTint</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.PopupNumberPicker" parent="AppTheme">
        <item name="android:background">@drawable/number_picker_design</item>
        <item name="android:textColorPrimary">@color/iconTint</item>
        <item name="android:colorControlNormal">@color/iconTint</item>
        <item name="android:colorControlActivated">@color/iconTint</item>
        <item name="android:layout_marginLeft">@dimen/padding_vvsmall</item>
        <item name="android:layout_marginRight">@dimen/padding_vvsmall</item>
    </style>

    <style name="CustomExposedDropdownMenu.Light" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="endIconTint">@color/iconTint</item>
        <item name="android:popupElevation">8dp</item>
    </style>

    <style name="CustomExposedDropdownMenu.Dark" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="endIconTint">@color/iconTintDark</item>
        <item name="android:popupElevation">8dp</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.PopupNumberPicker.Dark" parent="AppTheme">
        <item name="android:background">@drawable/number_picker_design_dark</item>
        <item name="android:textColorPrimary">@color/iconTintDark</item>
        <item name="android:colorControlNormal">@color/iconTintDark</item>
        <item name="android:colorControlActivated">@color/iconTintDark</item>
        <item name="android:layout_marginLeft">@dimen/padding_vvsmall</item>
        <item name="android:layout_marginRight">@dimen/padding_vvsmall</item>
    </style>

    <style name="timerNameEditText" parent="AppTheme">
        <item name="android:colorControlNormal">@color/accent</item>
        <item name="android:colorControlActivated">@color/text</item>
    </style>

    <style name="ShapeAppearanceOverlay.CountdownTimer.Button.Circle" parent="AppTheme">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>
</resources>