<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupNumberPicker">
        <item name="android:background">@drawable/number_picker_design</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:colorControlNormal">@color/text</item>
        <item name="android:layout_marginLeft">@dimen/padding_vvsmall</item>
        <item name="android:layout_marginRight">@dimen/padding_vvsmall</item>
    </style>

    <style name="AppTheme.PopupButton">
        <item name="android:background">@drawable/popup_buttons</item>
        <item name="android:textColor">@color/text</item>
        <item name="colorAccent">@color/text</item>
    </style>

    <style name="timerNameEditText" parent="Theme.AppCompat.Light">
        <item name="android:colorControlNormal">@color/accent</item>
        <item name="android:colorControlActivated">@color/text</item>
    </style>
</resources>