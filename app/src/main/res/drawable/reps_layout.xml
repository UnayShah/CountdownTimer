<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list
            android:paddingLeft="@dimen/padding_vvsmall"
            android:paddingTop="@dimen/padding_vvsmall"
            android:paddingRight="@dimen/padding_vvsmall"
            android:paddingBottom="@dimen/padding_vvsmall">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/accent"/>
                    <corners android:radius="@dimen/padding_huge" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="@dimen/padding_huge" />
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

</layer-list>